<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="700.0" prefWidth="1080.0" styleClass="backgroundEstoqueBalanco" stylesheets="@MaioriaStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.programa.projetomercadofx.FinanceiroBalancoController">
   <children>
      <BorderPane prefHeight="700.0" prefWidth="1080.0">
         <top>
            <AnchorPane prefHeight="96.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btVerTudo" layoutX="9.0" layoutY="64.0" mnemonicParsing="false" onAction="#onBtVerTudo" prefHeight="34.0" prefWidth="111.0" styleClass="verTudo" stylesheets="@MaioriaStyle.css">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btInserirData" layoutX="123.0" layoutY="65.0" mnemonicParsing="false" onAction="#onBtInserirData" prefHeight="31.0" prefWidth="104.0" style="-fx-background-color: transparent;" styleClass="inserirData" stylesheets="@MaioriaStyle.css">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <TextField fx:id="tfData" disable="true" layoutX="232.0" layoutY="68.0" prefHeight="25.0" prefWidth="86.0" promptText="dd/MM/yyyy" />
                  <Button fx:id="btVoltar" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchToFinanceiroMainScreen" prefHeight="24.0" prefWidth="73.0" style="-fx-background-color: transparent;" styleClass="voltar" stylesheets="@MaioriaStyle.css">
                     <font>
                        <Font size="9.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btOKData" layoutX="335.0" layoutY="68.0" mnemonicParsing="false" onAction="#onBtOKData" prefHeight="25.0" prefWidth="81.0" style="-fx-background-color: transparent;" styleClass="ok" stylesheets="@MaioriaStyle.css">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btInfo" blendMode="DARKEN" layoutX="463.0" layoutY="8.0" mnemonicParsing="false" onAction="#onClickAjuda" prefHeight="28.0" prefWidth="32.0" />
               </children>
            </AnchorPane>
         </top>
         <center>
            <ListView fx:id="listViewBalanco" prefHeight="700.0" prefWidth="1208.0" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
